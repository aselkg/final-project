<div class="flex-row d-flex justify-content-center">
<div class="col-md-8">
   <div class="card mt-5">
      <div class="card-body form">
         <%= form_with(model: product, local: true) do |form| %>
         <% if product.errors.any? %>
         <div id="error_explanation">
            <h5><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h5>
            <ul>
               <% product.errors.full_messages.each do |message| %>
               <p class="text-danger"><%= message %></p>
               <% end %>
            </ul>
         </div>
         <% end %>
         <div class="form-group">
            <%= form.label :title, class:"text-dark" %>
            <%= form.text_field :title, class:"form-control" %>
         </div>
         <div class="form-group">
            <%= form.label :content, class:"text-dark" %>
            <%= form.text_field :content, class:"form-control" %>
         </div>
         <div class="form-group">
           <p class="text-dark"> Categry  <%= form.select :category_id, Category.all.map {|c| [c.category, c.id]} , class:"form-control"%></p>
         </div>
         <div class="form-group">
            <%= form.label :price, class:"text-dark" %>
            <%= form.text_field :price, class:"form-control" %>
         </div>
         <div class="actions select">
            <%= form.submit "Create Product", class:"btn btn-success" %>
            <%= link_to "Home", products_path, class:"btn btn-secondary" %>
         </div>
         <% end %>
      </div>
   </div>
</div>   
</div>