<p id="notice"><%= notice %></p>

<div class="font-weight-bold pl-3 text-secondary ">
<%= link_to 'All', products_path, class:"text-info" %> |
<% @categories.each do |category| %>
<%= link_to category.category, products_path(:categ => category.id), class:"text-info" %> |
<% end %>
<span class="float-right pr-3">
<%= link_to 'Categories', categories_path, class:"text-info" %> |
<%= link_to 'Add Product', new_product_path, class:"text-info" %> |
<%= link_to 'Add Category', new_category_path, class:"text-info" %> 
</span>
</div>
<div class="center">
<h2 class="mt-3 mb-5 card-title text-monospace">Products</h2>
<div id="products" class="row row-cols-1 row-cols-md-3 pl-3 pr-3">
   <% @products.each do |product| %>
   <div id="product" class="col mb-4">
      <div class="card h-100">
         <div  class="card-body pl-3 pr-3">
            <h5 class="card-title"><%= product.title %></h5>
            <p><%= product.content %></p>
            <p>Price: <%= product.price %> $</p>
            <p><span class="font-weight-bold">Posted date </span>   <%= product.created_at.strftime("%Y-%m-%d") %>
            <br><br>
            <%= link_to 'Details', product, class:"btn btn-primary" %>
            
          </div>
      </div>
   </div>
   <% end %>
   </div>
</div>